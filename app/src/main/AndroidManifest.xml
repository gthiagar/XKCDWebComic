<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ganesh.xkcdwebcomic">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ItemActivity"
            android:parentActivityName="com.example.ganesh.xkcdwebcomic.MainActivity" >
            <!-- parent activity for 4.0 and below  -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.ganesh.xkcdwebcomic.MainActivity"
                />
            ></activity>
    </application>

</manifest>